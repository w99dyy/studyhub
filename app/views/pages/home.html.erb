<div class="mt-8">

  <div class="recent-posts pl-5 grid grid-cols-1 ml-2  mr-3 p-6 ">
  <div class="border border-cyan-600">
  <h1 class="text-3xl font-bold dark:text-white pl-3 pb-3 pt-2 bg-cyan-600">Recent posts</h1>

    <% if @recent_posts.any? %>
      <% @recent_posts.each do |post| %>
        <div class="bg-gray-700 p-4  border border-gray-600">
          <%= link_to post.title, post, class: "text-white hover:text-blue-300 font-medium" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-white">No posts yet</p>
    <% end %>
  </div>
</div>


</div>