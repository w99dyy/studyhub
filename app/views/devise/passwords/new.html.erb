
<div class="text-center text-center border-inherit rounded-md pt-6 pl-20 pr-20 pb-15 mt-7 w-fit mx-auto bg-white dark:bg-gray-800 px-3 py-3 ring shadow-xl ring-gray-900/5 focus:outline-none">
<h1 class="text-2xl font-bold">Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field pt-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "border-2 border-cyan-700 rounded-full focus:outline-none" %>
  </div>

    <div class= "actions bg-cyan-500 mt-4 pt-1 pb-1 pr-10 pl-10 inline-block hover:bg-cyan-600 text-white font-medium  rounded-full shadow transition duration-200">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>