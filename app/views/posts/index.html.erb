<div class="posts-page px-6">
  <!-- Page Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-white mb-4">All Posts</h1>
    <p class="text-gray-400">Browse all community posts</p>
  </div>

  <!-- Posts List -->
  <div class="posts-container">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="post-card bg-gray-800 rounded-lg p-6 mb-6 border border-gray-700">
          <!-- Post Title -->
          <h2 class="text-2xl font-bold text-white mb-3">
            <%= link_to post.title, post, class: "hover:text-cyan-400 transition" %>
          </h2>
          
          <!-- Post Content Preview -->
          <div class="post-content mb-4">
            <p class="text-gray-300 leading-relaxed">
              <%= truncate(post.content.to_plain_text, length: 200) %>
            </p>
          </div>
          
          <!-- Tags -->
          <% if post.tags.any? %>
            <div class="tags mb-4">
              <div class="flex flex-wrap gap-2">
                <% post.tags.each do |tag| %>
                  <span class="bg-cyan-600 text-white px-3 py-1 rounded-full text-sm">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- Post Metadata -->
          <div class="post-meta flex justify-between items-center text-sm text-gray-400">
            <div>
              <span class="mr-4">üìÖ <%= time_ago_in_words(post.created_at) %> ago</span>
              <% if post.updated_at != post.created_at %>
                <span>‚úèÔ∏è Updated <%= time_ago_in_words(post.updated_at) %> ago</span>
              <% end %>
            </div>
            
            <%= link_to "Read More ‚Üí", post, class: "text-cyan-400 hover:text-cyan-300 font-semibold" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Empty State -->
      <div class="empty-state text-center py-16 bg-gray-800 rounded-lg">
        <div class="text-6xl mb-4">üìù</div>
        <h3 class="text-2xl font-bold text-white mb-2">No posts yet</h3>
        <p class="text-gray-400 mb-6">Be the first to share your knowledge!</p>
        <%= link_to "Create First Post", new_post_path, 
            class: "bg-cyan-500 hover:bg-cyan-600 text-white px-6 py-3 rounded-lg font-semibold transition" %>
      </div>
    <% end %>
  </div>
</div>