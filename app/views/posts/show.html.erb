

<div class="max-w-full md:max-w-3xl mt-5 mx-4 md:mx-15 bg-gray-800 border border-gray-600 rounded-md mb-4 px-4 md:px-[0.5em] py-4 md:py-[1em]">
  <div class="text-xl md:text-2xl lg:text-3xl font-bold pb-4 md:pb-8">
    <%= @post.title %>
  </div>
  <div class="prose max-w-none text-sm md:text-base">
    <%= @post.content %>
  </div>
</div>


</div>
<div class=" mt-15 px-4 md:px-8 lg:px-16">

<h1 class="text-2xl font-bold text-sm md:text-base pb-5">New Comment</h1>

<div class="max-w-full md:max-w-3xl mx-1 md:mx-0 bg-gray-800 border border-gray-600 rounded-md  px-4 md:px-[0.5em] py-4 md:py-[1em] ">

<%= form_with model: [@post, @post.comments.build] do |form| %>
  
  <div class="bg-gray-800 border border-gray-600 rounded-md inline-block ">
  <%= form.text_field :content,
  class: "w-full px-6 py-3 pr-20 outline-none",
    placeholder: "Add a comment" %>
    </div>
  <div class="actions bg-cyan-500 float-right mt-4 pt-1 pb-1 pr-10 pl-10 inline-block hover:bg-cyan-600 text-white font-medium rounded-full shadow transition duration-200">
  <%= form.submit "Comment" %>
  </div>

  <% if @post.comments.any? %>
    <% @post.comments.each do |comment| %>
      <div class="comment pt-6">
        <p><%= comment.content %></p>
      </div>
    <% end %>
  <% else %>
    <p>No comments yet.</p>
  <% end %>
<% end %>
</div>
</div>
