<div class="text-white mb-5">
  <%= form_with model: @post, data: { turbo: false } do |form| %>
    
    <div class="field mb-4 text-white container mx-auto">
      <%= form.label :title, "Create a post", class: "txt-4xl  font-bold text-white block pb-5 pt-5 pl-2" %>
      <%= form.text_field :title,
            required: true,
             class: "w-full px-3 py-2 text-white bg-gray-800 border border-gray-600 rounded-md", 
      placeholder: "Enter a title for your post" %>

    </div>

    <div class="field mb-4 container mx-auto">
      <%= form.label :content %>
      <%= form.rich_text_area :content, class: "bg-gray-800 border border-gray-600 rounded-md" %>
    </div>

    <%# Submit Button %>
    <div class="actions bg-cyan-500 float-right mr-11 mt-4 pt-1 pb-1 pr-10 pl-10 inline-block hover:bg-cyan-600 text-white font-medium rounded-full shadow transition duration-200">
      <%= form.submit "Create" %>
    </div>
    
  <% end %>
</div>