<div class="text-white mb-5 max-w-4xl mx-auto">
  <%= form_with model: @post, data: { turbo: false } do |form| %>
    
    <!-- Title field -->
    
    <div class="field mb-4 text-white container mx-auto">
      <%= form.label :title, "Create a post", class: "text-4xl  font-bold text-white block pb-5 pt-5 pl-2" %>
      <%= form.text_field :title,
            required: true,
             class: "w-full px-3 py-2 text-white bg-gray-800 border border-gray-700 rounded-md", 
      placeholder: "Enter a title for your post" %>

    </div>
    
    <!-- Tags field -->
<div class="field mb-4 text-white container mx-auto">
  <%= form.label :tag_list, "Tags", class: "text-xl font-bold text-white block pb-2 pt-5 pl-2" %>
  <%= form.text_field :tag_list, 
        class: "w-full px-3 py-2 text-white bg-gray-800 border border-gray-700 rounded-md outline-none", 
        placeholder: "English, Math, Question, Arabic ...." %>
  <p class="text-gray-400 text-sm pl-2 pt-1">Separate tags with commas</p>
</div>

    <div class="field mb-4 container mx-auto">
      <%= form.label :content %>
      <%= form.rich_text_area :content, class: "bg-gray-800 border border-gray-700 rounded-md outline-none" %>
    </div>

    <!-- Submit Button -->
    
    <div class="actions bg-blue-700 hover:bg-blue-600 float-right mr-11 mt-4 pt-1 pb-1 pr-10 pl-10 inline-block text-white font-medium rounded-full shadow transition duration-200">
      <%= form.submit "Create" %>
    </div>
    
  <% end %>
</div>